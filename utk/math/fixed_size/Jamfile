project utk/math/fixed_size ;

#---| vector
#-----------

unit-test test-vector-interface : vector_interface_test.cpp
                                : <library>/robots//boost-unit-test ;
unit-test test-vector-array     : vector_array_test.cpp
                                : <library>/robots//boost-unit-test ;
unit-test test-vector-operators : vector_operators_test.cpp
                                : <library>/utk/io//io <library>/robots//boost-unit-test  ;
unit-test test-vector-functions : vector_functions_test.cpp
                                : <library>/utk/io//io <library>/robots//boost-unit-test  ;

alias test-vector : test-vector-interface
                    test-vector-array
                    test-vector-operators
                    test-vector-functions ;

install install-vector-headers 	: /utk/math/special_functions//sgn-install-headers
								  /utk/math/special_functions//clamp-install-headers
								  /utk/io//install-headers
								  vector_interface.hpp
                                  vector_array.hpp
                                  vector_operators.hpp
                                  vector_functions.hpp
                                  vector.hpp
								: <location>$(INSTALL_INC_PREFIX)/utk/math/fixed_size ;

explicit install-vector-headers ;


